<%= form_with model: @post, url: url, data: {turbo_method: method }, class: "w-full h-full mx-auto px-auto md:w-3/6 " do |f| %>
  <article class="flex flex-col shadow my-4">
    <div class="bg-white flex flex-col justify-start p-6 space-y-2">
      <%= f.label :title, t(:title), class: "text-3xl font-bold hover:text-gray-700" %>
      <%= f.text_field :title, class: "field hover:text-gray-700" %>
      <span class="h-8 text-red-500 text-sm inline-flex items-center">
        <%= f.object.errors[:title].any? ? content_tag(:p, show_errors(f.object, :title), class: "text-red-500 text-sm") : "" %>
      </span>
      <%= f.label :body, t(:body), class: "text-lg" %>
      <%= f.text_area :body, class: "text-sm min-h-48 field" %>
      <span class="h-8 text-red-500 text-sm inline-flex items-center">
        <%= f.object.errors[:body].any? ? content_tag(:p, show_errors(f.object, :body), class: "text-red-500 text-sm") : "" %>
      </span>
      <%= f.label :status, class: "inline-flex items-center cursor-pointer pt-3" do %>
        <%= f.check_box :status, class: "peer sr-only" %>
        <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
        <span class="ms-3 text-sm font-medium text-gray-900 dark:text-gray-300"><%= t :published %></span>
      <% end %>

      <%= f.submit class: "w-full bg-primary hover:bg-secondary text-white font-bold py-2 px-4 mt-4 rounded" %>
    </div>
  </article>
<% end %>
