<% provide :title,  t("home") %>
<section class="w-full md:w-2/3 mx-auto flex flex-col items-center px-3">
  <%= render "shared/error_messages" %>
  <%= render "shared/search" %>
  <% if @posts.empty? %>
    <p class="text-center text-gray-500 text-lg mt-8">
      <%= t("no_posts") %>
    </p>
  <% else %>
    <%= render @posts, render_tools: false, show_all: false %>
    <%== @pagy.pages <= 1 ? "" :  pagy_nav(@pagy)  %>
    <%= link_to t("download"), export_posts_path(format: :xlsx), class: "mb-10 bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 mt-4 rounded" %>
  <% end %>
</section>
