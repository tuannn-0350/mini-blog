<%= form_with url: request.path, method: :get, class: "my-4 w-full" do |f| %>
  <div class="flex flex-col lg:flex-row lg:space-x-4 lg:space-y-0 space-y-2 items-center mx-auto ">
    <%= f.text_field :user_name, class: "outline-none border border-gray-300 rounded py-2 w-1/3", placeholder: t("search_by_user_name"), value: params[:user_name] %>

    <%= f.text_field :title, class: "outline-none border border-gray-300 rounded py-2 w-2/3", placeholder: t("search_by_title"), value: params[:title] %>
    <%= f.submit t("search"), class: "bg-primary hover:bg-secondary text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
