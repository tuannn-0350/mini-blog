<%= content_for :title, t("sign_up") %>
<div class = "flex flex-col items-center justify-center w-full h-120">

  <section class="bg-gray-50 dark:bg-gray-900 w-full h-full ">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto h-full w-3/6 lg:py-0">

      <%= form_for @user, url: signup_path, html: { class: "w-4/6" } do |f| %>
        <div class="py-3 w-full">
          <%= f.label :name, t(:name) %>
          <%= f.text_field :name, class: "field"  %>
          <span class="h-8 text-red-500 text-sm inline-flex items-center">
            <%= f.object.errors[:name].any? ? content_tag(:p, show_errors(f.object, :name), class: "text-red-500 text-sm") : "" %>
          </span>
        </div>
        <div class="py-3 w-full">
          <%= f.label :email, t(:email) %>
          <%= f.email_field :email, class: "field"  %>
          <span class="h-8 text-red-500 text-sm inline-flex items-center">
            <%= f.object.errors[:email].any? ? content_tag(:p, show_errors(f.object, :email), class: "text-red-500 text-sm") : "" %>
          </span>
        </div>
        <div class="py-3 w-full">
          <%= f.label :password, t(:password) %>
          <%= f.password_field :password, class: "field"  %>
          <span class="h-8 text-red-500 text-sm inline-flex items-center">
            <%= f.object.errors[:password].any? ? content_tag(:p, show_errors(f.object, :password), class: "text-red-500 text-sm") : "" %>
          </span>
        </div>
        <div class="py-3 w-full">
          <%= f.label :password_confirmation, t(:password_confirmation) %>
          <%= f.password_field :password_confirmation, class: "field"  %>
          <span class="h-8 text-red-500 text-sm inline-flex items-center">
            <%= f.object.errors[:password_confirmation].any? ? content_tag(:p, show_errors(f.object, :password_confirmation), class: "text-red-500 text-sm") : "" %>
          </span>
        </div>
        <%= render "shared/error_messages" %>
        <div class="py-3">
          <%= f.submit t("sign_up"), class: "w-full bg-primary hover:bg-secondary text-white font-bold py-2 px-4 mt-4 rounded" %>
        </div>

        <p class="text-sm font-light text-sky-800 text-end"><%= t "already_have_an_account" %>
          <%= link_to t("log_in"), login_path, class: "text-sky-900 font-medium hover:underline" %>
        </p>

      <% end %>
    </div>
  </section>
</div>
