<%= content_for :title, t("log_in")  %>
<div class = "flex flex-col items-center justify-center w-full h-96">

  <section class="bg-gray-50 dark:bg-gray-900 w-full h-full ">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto h-full w-3/6 lg:py-0">
      <%= form_for :session, url: login_path, class: "w-4/6" do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <div class="py-3">
          <%= f.label t :email %>
          <%= f.email_field :email, class: "field"  %>
        </div>
        <div  class="py-3">
          <%= f.label t :password %>
          <%= f.password_field :password, class: "field" %>
        </div >


        <div  class="py-3">
          <%= f.submit t("log_in"), class: "w-full bg-primary hover:bg-secondary text-white font-bold py-2 px-4 mt-4 rounded" %>
        </div>
        <p class="text-sm font-light text-sky-800 text-end"><%= t "please_sign_up" %>
          <%= link_to t("sign_up"), signup_path, class: "text-sky-900 font-medium hover:underline" %>
        </p>
      <% end %>
    </div>
  </section>
</div>
